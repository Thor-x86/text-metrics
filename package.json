{
  "name": "text-metrics",
  "version": "0.5.1",
  "description": "An efficient text measurement set for the browser.",
  "license": "MIT",
  "repository": "bezoerb/text-metrics",
  "author": {
    "name": "Ben ZÃ¶rb",
    "email": "ben@sommerlaune.com",
    "url": "sommerlaune.com"
  },
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "lint": "xo",
    "test": "jest",
    "pretest": "npm run build",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "rollup -c",
    "prepare": "npm run clean && npm run format:check && npm run lint && npm test",
    "prepublish": "npm run prepare",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "lib/text-metrics.js",
  "unpkg": "dist/text-metrics.js",
  "module": "es/text-metrics.js",
  "browser": "dist/text-metrics.js",
  "keywords": [
    "browser",
    "javascript",
    "text",
    "text-metrics",
    "fit-text",
    "width",
    "font-size",
    "height"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "canvas": "^2.3.1",
    "coveralls": "^3.0.2",
    "cssstyle": "^1.1.1",
    "eslint": "^5.12.1",
    "eslint-config-xo": "^0.26.0",
    "jest": "^23.6.0",
    "jest-mock": "^23.2.0",
    "jest-util": "^23.4.0",
    "jsdom": "^13.1.0",
    "prettier": "^1.16.1",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.2",
    "sinon": "^7.2.3",
    "xo": "^0.24.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "ignores": [
      "dist",
      "es",
      "lib",
      "rollup.config.js"
    ],
    "rules": {
      "valid-jsdoc": 0
    }
  },
  "jest": {
    "testEnvironment": "./test/helpers/environment.js",
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "browserslist": "last 2 versions, ie >= 10, ie_mob >= 10, ff >= 30, chrome >= 34, safari >= 8, opera >= 23, ios >= 7, android >= 4, bb >= 10"
}

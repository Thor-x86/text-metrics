{
  "name": "text-metrics",
  "version": "1.0.3",
  "description": "An efficient text measurement set for the browser.",
  "license": "MIT",
  "repository": "bezoerb/text-metrics",
  "authors": [
    "Ben ZÃ¶rb <ben@sommerlaune.com> (https://github.com/bezoerb)"
  ],
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "lint": "xo",
    "test": "jest",
    "pretest": "npm run build",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "test:browser": "npx browserstack-runner",
    "test:all": "npm run test:cov && npm run test:browser",
    "build": "microbundle",
    "dev": "microbundle watch",
    "prepare": "npm run clean && npm run format:check && npm run lint && npm test",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "main": "dist/text-metrics.js",
  "umd:main": "dist/text-metrics.umd.js",
  "unpkg": "dist/text-metrics.umd.js",
  "module": "dist/text-metrics.module.js",
  "esmodule": "dist/text-metrics.module.js",
  "browser": "dist/text-metrics.umd.js",
  "keywords": [
    "browser",
    "javascript",
    "text",
    "text-metrics",
    "fit-text",
    "width",
    "font-size",
    "height"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/node": "^7.10.1",
    "@babel/plugin-external-helpers": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/register": "^7.10.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "browserstack-runner": "^0.9.1",
    "canvas": "^2.6.1",
    "core-js": "^3.6.5",
    "coveralls": "^3.1.0",
    "cssstyle": "^2.3.0",
    "eslint": "^7.1.0",
    "eslint-config-xo": "^0.29.1",
    "finalhandler": "^1.1.2",
    "get-port": "^5.1.1",
    "jest": "^26.0.1",
    "jest-mock": "^26.0.1",
    "jest-util": "^26.0.1",
    "jsdom": "^16.2.2",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "serve-static": "^1.14.1",
    "sinon": "^9.0.2",
    "xo": "^0.30.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "ignores": [
      "dist",
      "es",
      "lib",
      "test/jasmine",
      "test/TextMetricsSpec.js"
    ],
    "rules": {
      "valid-jsdoc": 0,
      "import/no-unresolved": 0,
      "import/no-unassigned-import": 0
    }
  },
  "npmName": "text-metrics",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "jest": {
    "testEnvironment": "./test/helpers/environment.js",
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "browserslist": "last 2 versions, ie >= 10, ie_mob >= 10, ff >= 30, chrome >= 34, safari >= 8, opera >= 23, ios >= 7, android >= 4, bb >= 10"
}

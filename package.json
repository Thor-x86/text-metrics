{
  "name": "text-metrics",
  "version": "0.5.1",
  "description": "An efficient text measurement set for the browser.",
  "license": "MIT",
  "repository": "bezoerb/text-metrics",
  "author": {
    "name": "Ben ZÃ¶rb",
    "email": "ben@sommerlaune.com",
    "url": "sommerlaune.com"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "test": "xo && nyc ava",
    "compile-standalone": "browserify dist/index.js -s textMetrics --outfile dist/text-metrics.bundle.js && uglifyjs dist/text-metrics.bundle.js -o dist/text-metrics.bundle.min.js",
    "compile-module": "babel src --out-dir dist --presets=env",
    "compile": "npm run compile-module && npm run compile-standalone",
    "prepublish": "npm run compile",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "src"
  ],
  "browser": "dist/index.js",
  "keywords": [
    "browser",
    "javascript",
    "",
    "text",
    "fit-text",
    "width",
    "font-size",
    "height"
  ],
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.7.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-object-assign": "^1.2.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "canvas": "^2.1.0",
    "coveralls": "^3.0.2",
    "cssstyle": "^1.1.1",
    "eslint": "^5.9.0",
    "eslint-config-xo": "^0.25.1",
    "jsdom": "^13.0.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "uglify-js": "^3.4.9",
    "xo": "^0.23.0"
  },
  "xo": {
    "space": 4,
    "ignores": [
      "dist/text-metrics.js",
      "dist/text-metrics.min.js"
    ],
    "rules": {
      "valid-jsdoc": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  },
  "browserslist": "last 2 versions, ie >= 10, ie_mob >= 10, ff >= 30, chrome >= 34, safari >= 8, opera >= 23, ios >= 7, android >= 4, bb >= 10"
}
